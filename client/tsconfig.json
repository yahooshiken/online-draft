{
  "compilerOptions": {
    "target": "es5",
    "module": "commonjs",
    "lib": ["ES2018", "DOM"],
    "jsx": "react",
    "rootDirs": ["src"],
    "strict": true,
    "types": ["react"],
    "typeRoots": ["src/@types"],
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true
  },
  "include": ["src"],
  "exclude": ["node_modules"]
}
